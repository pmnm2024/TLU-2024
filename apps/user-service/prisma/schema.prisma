datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  address     Json?
  createdAt   DateTime        @default(now())
  email       String?         @unique
  fcmToken    String?
  firstName   String?
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  lastName    String?
  nowLocation Json?
  password    String
  phone       String?
  rank        RankUser?       @relation(fields: [rankId], references: [id])
  rankId      String?         @unique @db.ObjectId
  roles       Json
  score       Int?
  sex         EnumUserSex?
  status      EnumUserStatus?
  updatedAt   DateTime        @updatedAt
  username    String          @unique
}

model OutBox {
  createdAt     DateTime  @default(now())
  eventType     String?
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  payload       Json?
  processedDate DateTime?
  retry         Int?
  status        String?
  updatedAt     DateTime  @updatedAt
}

model RankUser {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  point       Int
  rankLevel   Int      @unique
  rankName    String   @unique
  rankUser    User?
  updatedAt   DateTime @updatedAt
}

model HistorySupport {
  city             String?
  createdAt        DateTime @default(now())
  description      String?
  district         String?
  fullname         String?
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  phone            String?
  requestSupportId String?
  updatedAt        DateTime @updatedAt
  userId           String?
  ward             String?
}

enum EnumUserSex {
  Male
  Female
}

enum EnumUserStatus {
  Unavailable
  Available
}
